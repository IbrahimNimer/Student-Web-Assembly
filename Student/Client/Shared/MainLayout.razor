@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="main-content">
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <h1 class="m-0">My Application</h1>
            <a class="btn btn-info" href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <footer class="footer mt-4 px-4">
            <p>&copy; @DateTime.Now.Year -  Company Name. All Rights Reserved.</p>
        </footer>
    </main>
</div>

<style>
    .page {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 250px; /* Adjust width as necessary */
        background-color: #343a40; /* Dark background for sidebar */
        color: white;
        padding: 20px;
    }

    .main-content {
        flex-grow: 1; /* Allow main content to take the remaining space */
        background-color: #f8f9fa; /* Light background for main content */
        padding: 20px;
    }

    .top-row {
        border-bottom: 1px solid #dee2e6; /* Add a bottom border to the top row */
        padding-bottom: 10px;
    }

    .footer {
        border-top: 1px solid #dee2e6; /* Add a top border to the footer */
        padding: 10px 0;
        text-align: center;
    }
</style>
